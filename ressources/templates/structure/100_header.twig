<header class='dark'>

	<div id="parallax">
		<div id="scene">
			<ul>
				<li class="layer plan1" data-depth="+5.0"><img src="ressources/img/parallax/plan4.png" alt=""></li>
				<li class="layer plan2" data-depth="-1.0"><img src="ressources/img/parallax/plan3.png" alt=""></li>
				<li class="layer plan3" data-depth="-3.0"><img src="ressources/img/parallax/plan1.png" alt=""></li>
			</ul>
		</div>
	</div>

	<!-- <script src="ressources/libs/parallax.js"></script> -->
	<script async type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/parallax/2.1.3/parallax.min.js"></script>
	<script defer> var parallax = new Parallax(document.getElementById('scene')); </script>

	<span id='name'>{{website.header.name}}</span>
	<img id='picture' src='{{website.header.picture}}' alt='Profile picture'/>
	<ul id='nav'>
		{% for page in website.pages.list %}
			<li id='nav-li-{{page.id}}' {% if page.id == website.current %} class='current' {% endif %}>
				<a id='nav-a-{{page.id}}' href='?page={{page.title}}'>{{ page.title }}</a>
			</li>
		{% endfor %}
	</ul>

</header>
