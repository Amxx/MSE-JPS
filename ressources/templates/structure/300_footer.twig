<footer>
	<ul id='social'>
		{% for social in website.socials.list %}
			<li>
				<a href='{{social.url}}' target='_blank'>
					{% if social.img %}<img src='{{social.img}}' alt='{{social.title}}'>{% endif %}
					{% if social.show_text %}{{social.title}}{% endif %}
				</a>
			</li>
		{% endfor %}
	</ul>
	<ul id='mininav'>
		{% for page in website.pages.list %}
			<li>
				<a id='mininav-a-{{page.id}}' href='?page={{page.title}}'>{{page.title}}</a>
			</li>
		{% endfor %}
		<li class='top'>
			<a class='quietest' href='#' onclick='slideTop(); return false;'>
				Page Top &#8593;
			</a>
		</li>
	</ul>
</footer>